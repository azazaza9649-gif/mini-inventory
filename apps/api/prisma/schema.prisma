generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  items     Item[]
}

model Item {
  id        String   @id @default(uuid())
  name      String
  quantity  Int
  createdAt DateTime @default(now())

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  @@index([categoryId])
}
