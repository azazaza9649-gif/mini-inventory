{
  "name": "mini-inventory",
  "private": true,
  "packagemanager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "pnpm -r test",
    "prepare": "husky",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "test:e2e": "pnpm db:up && pnpm -c apps/api prisma migrate deploy && pnpm -c apps/api test",
    "lint-staged": "lint-staged"
  },
  "devdependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@10.16.0+sha512.8066e7b034217b700a9a4dbb3a005061d641ba130a89915213a10b3ca4919c19c037bec8066afdc559b89635fdb806b16ea673f2468fbb28aabfa13c53e3f769"
}
